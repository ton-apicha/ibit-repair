# ========================================
# iBit Repair Production Environment Configuration
# ========================================
# 
# ไฟล์นี้ใช้สำหรับ Production Deployment
# คัดลอกเป็น .env.production และปรับแต่งค่าตาม production environment

# ========================================
# Database Configuration
# ========================================

# PostgreSQL Database URL (Production)
DATABASE_URL="postgresql://ibit_user:YOUR_SECURE_PASSWORD@postgres:5432/ibit_repair?schema=public"

# Database Connection Pool Settings
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_POOL_IDLE=30000

# ========================================
# JWT Configuration
# ========================================

# JWT Secret (ต้องเปลี่ยนเป็นค่าที่ปลอดภัย!)
JWT_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_64_CHARACTERS"
JWT_EXPIRES_IN=86400
JWT_REFRESH_EXPIRES_IN=604800

# ========================================
# Server Configuration
# ========================================

PORT=4000
NODE_ENV="production"
HOST="0.0.0.0"

# ========================================
# CORS Configuration
# ========================================

# Production domains only
CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# ========================================
# File Upload Configuration
# ========================================

MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"
UPLOAD_DIR="/app/uploads"

# ========================================
# Email Configuration
# ========================================

SMTP_HOST="smtp.yourdomain.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="noreply@yourdomain.com"
SMTP_PASS="YOUR_EMAIL_PASSWORD"
EMAIL_FROM="noreply@yourdomain.com"

# ========================================
# Logging Configuration
# ========================================

LOG_LEVEL="warn"
LOG_DIR="/app/logs"
LOG_RETENTION_DAYS=30

# ========================================
# Security Configuration
# ========================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MIN_PASSWORD_LENGTH=12
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SYMBOLS=true
SESSION_SECRET="CHANGE_THIS_TO_A_SECURE_SESSION_SECRET"
SESSION_MAX_AGE=86400000

# ========================================
# Monitoring
# ========================================

HEALTH_CHECK_INTERVAL=60000
ENABLE_METRICS=true

# ========================================
# Feature Flags
# ========================================

ENABLE_REGISTRATION=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_AUDIT_LOG=true

# ========================================
# External Services
# ========================================

REDIS_URL="redis://redis:6379"
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=90

# ========================================
# Development Settings (Disable in Production)
# ========================================

DEBUG=false
ENABLE_REQUEST_LOGGING=false
SEED_DATABASE=false
